using UnityEngine;
using UnityEngine.SceneManagement;

public class PauseManager : MonoBehaviour
{
    // Referencia al menu de pausa
    public GameObject pauseMenuUI;

    // Estado del juego
    private bool isPaused = false;

    void Update()
    {
        // Detectar si se presiona la tecla Escape
        if (Input.GetKeyDown(KeyCode.Escape))
        {
            if (isPaused)
            {
                Resume();
            }
            else
            {
                Pause();
            }
        }
    }

    // Reanudar el juego
    public void Resume()
    {
        pauseMenuUI.SetActive(false); // Ocultar el menu de pausa
        Time.timeScale = 1f; // Restaurar el tiempo normal
        isPaused = false;
    }

    // Pausar el juego
    public void Pause()
    {
        pauseMenuUI.SetActive(true); // Mostrar el menu de pausa
        Time.timeScale = 0f; // Detener el tiempo
        isPaused = true;
    }

    // Reiniciar la partida
    public void RestartGame()
    {
        Time.timeScale = 1f; // Asegurarse de restaurar el tiempo
        SceneManager.LoadScene(SceneManager.GetActiveScene().name); // Recargar la escena actual
    }
    
    // Cargar el menu principal
    public void LoadMainMenu()
    {
        Time.timeScale = 1f; // Asegurarse de restaurar el tiempo
        SceneManager.LoadScene("MainMenuScene"); // Cambiar a la escena del menu principal
    }

    // Salir del juego (opcional)
    public void QuitGame()
    {
        Debug.Log("Saliendo del juego...");
        Application.Quit(); // Cierra la aplicacion
    }
}
